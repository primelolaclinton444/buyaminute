// ================================
// BuyAMinute — Phase 1 Schema
// Money & Ledger Only
// ================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  name      String?
  email     String?  @unique
  passwordHash String?
  timezone  String   @default("UTC")
  marketingOptIn Boolean @default(false)
  earningsVisible Boolean @default(true)
  earningsVisibilityLockedUntil DateTime?

  wallet Wallet?
  receiverProfile ReceiverProfile?
  depositAddress DepositAddress?
}

model Wallet {
  userId        String  @id
  balanceTokens Int     @default(0)

  user User @relation(fields: [userId], references: [id])
}

model DepositAddress {
  userId      String @id
  tronAddress String @unique
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model LedgerEntry {
  id          String   @id @default(cuid())
  userId      String
  type        LedgerType
  amountTokens Int
  source      LedgerSource
  callId      String?
  withdrawalRequestId String?
  txHash      String?
  idempotencyKey String
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([callId])
  @@unique([txHash, source])
  @@unique([idempotencyKey])

  call Call? @relation(fields: [callId], references: [id])
  withdrawalRequest WithdrawalRequest? @relation(fields: [withdrawalRequestId], references: [id])

}

enum LedgerType {
  credit
  debit
}

enum LedgerSource {
  call_billing
  crypto_deposit
  withdrawal
  availability_ping
}

// ================================
// Withdrawals (Manual — MVP)
// ================================

model WithdrawalRequest {
  id                    String   @id @default(cuid())
  userId                String
  amountTokens          Int
  destinationTronAddress String
  status                WithdrawalStatus @default(pending)
  txHash                String?
  createdAt             DateTime @default(now())
  processedAt           DateTime?

  @@index([userId])

  ledgerEntries LedgerEntry[]
}


// ================================
// Calls — Domain Model (Phase 4)
// ================================

model Call {
  id         String   @id @default(cuid())
  callerId   String
  receiverId String
  status     CallStatus
  createdAt  DateTime @default(now())
  endedAt    DateTime?

  ratePerSecondTokens Int
  previewApplied      Boolean @default(false)

  participants CallParticipant?
  ledgerEntries LedgerEntry[]
}

model CallParticipant {
  callId               String   @id
  callerConnectedAt    DateTime?
  receiverConnectedAt  DateTime?
  bothConnectedAt      DateTime?

  call Call @relation(fields: [callId], references: [id])
}

model CallerReceiverPreviewLock {
  id           String   @id @default(cuid())
  callerId     String
  receiverId   String
  previewUsedAt DateTime

  @@unique([callerId, receiverId])
  @@index([previewUsedAt])
}

enum CallStatus {
  created
  ringing
  connected
  ended
}

enum WithdrawalStatus {
  pending
  sent
  failed
}


// ================================
// Receiver Profile (MVP)
// ================================

model ReceiverProfile {
  userId            String  @id
  ratePerSecondTokens Int
  isAvailable       Boolean @default(false)
  isVideoEnabled    Boolean @default(true)
  lastRateChangeAt  DateTime?
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}


model CryptoDeposit {
  id            String   @id @default(cuid())
  userId        String
  tronAddress   String
  amountUsdtAtomic Int
  txHash        String   @unique
  confirmations Int      @default(0)
  credited      Boolean  @default(false)
  confirmedAt   DateTime?
  createdAt     DateTime @default(now())

  @@index([userId])
  @@index([tronAddress])
}

// ================================
// Availability Ping (MVP)
// ================================

model AvailabilityPing {
  id         String @id @default(cuid())
  callerId   String
  receiverId String
  question   AvailabilityQuestion
  response   AvailabilityResponse?
  status     AvailabilityPingStatus @default(sent)
  feeTokens  Int
  createdAt  DateTime @default(now())
  respondedAt DateTime?

  @@index([callerId])
  @@index([receiverId])
}

enum AvailabilityPingStatus {
  sent
  delivered
  replied
}

enum AvailabilityQuestion {
  available_now
  available_later
  when_good_time
}

enum AvailabilityResponse {
  available_now
  available_later
  not_available
}
