// ================================
// BuyAMinute — Phase 1 Schema
// Money & Ledger Only
// ================================

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  wallet Wallet?
  receiverProfile ReceiverProfile?
}

model Wallet {
  userId        String  @id
  balanceTokens Int     @default(0)

  user User @relation(fields: [userId], references: [id])
}

model LedgerEntry {
  id          String   @id @default(cuid())
  userId      String
  type        LedgerType
  amountTokens Int
  source      LedgerSource
  callId      String?
  txHash      String?
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([callId])
}

enum LedgerType {
  credit
  debit
}

enum LedgerSource {
  call_billing
  crypto_deposit
  withdrawal
}

// ================================
// Withdrawals (Manual — MVP)
// ================================

model WithdrawalRequest {
  id                    String   @id @default(cuid())
  userId                String
  amountTokens          Int
  destinationTronAddress String
  status                WithdrawalStatus @default(pending)
  txHash                String?
  createdAt             DateTime @default(now())
  processedAt           DateTime?

  @@index([userId])
}


// ================================
// Calls — Domain Model (Phase 4)
// ================================

model Call {
  id         String   @id @default(cuid())
  callerId   String
  receiverId String
  status     CallStatus
  createdAt  DateTime @default(now())
  endedAt    DateTime?

  ratePerSecondTokens Int
  previewApplied      Boolean @default(false)

  participants CallParticipant?
}

model CallParticipant {
  callId               String   @id
  callerConnectedAt    DateTime?
  receiverConnectedAt  DateTime?
  bothConnectedAt      DateTime?

  call Call @relation(fields: [callId], references: [id])
}

model CallerReceiverPreviewLock {
  id           String   @id @default(cuid())
  callerId     String
  receiverId   String
  previewUsedAt DateTime

  @@unique([callerId, receiverId])
  @@index([previewUsedAt])
}

enum CallStatus {
  created
  ringing
  connected
  ended
}

enum WithdrawalStatus {
  pending
  sent
  failed
}


// ================================
// Receiver Profile (MVP)
// ================================

model ReceiverProfile {
  userId            String  @id
  ratePerSecondTokens Int
  isAvailable       Boolean @default(false)
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}


model CryptoDeposit {
  id        String   @id @default(cuid())
  userId    String
  txHash    String   @unique
  amountRaw String
  chain     String   @default("TRC20")
  createdAt DateTime @default(now())

  @@index([userId])
}
